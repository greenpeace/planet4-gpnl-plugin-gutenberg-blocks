{
	"env": {
		"browser": true,
		"es6": true,
		"jquery": true,
		"jest": true
	},
	"extends": "eslint:recommended",
	"rules": {
		"indent": [
			"error",
			2
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"always"
		],
		"curly": [
			"error",
			"all"
		],
		"one-var-declaration-per-line": [
			"error",
			"always"
		],
		"new-cap": "error",
		"no-var": 1
	},
	"parserOptions": {
		"ecmaVersion": 8,
		"ecmaFeatures": {
			"jsx": true,
			"modules": true
		},
		"sourceType": "module"
	},
	"globals": {
		"page": true,
		"browser": true,
		"$": "writable",
		"moment": "writable",
		"L": "writable"
	}
}
