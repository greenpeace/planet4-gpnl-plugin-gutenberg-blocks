{% block newsletter %}
	{% if ( fields ) %}

		<section class="gpnl-newsletter__block">

			<div class="background-image"
				 style="
					 background-image: url('{{ fields.backgroundimage_url | default }}');
					 background-position: {{ fields.focus_image | default }};
					 opacity: {{ fields.opacity }}%;
					 ">
			</div>
			<div class="page-template gpnl-newsletter__wrapper">
				<div class="gpnl-newsletter__text">
						{% if ( fields.subtitle ) %}
							<p class="gpnl-newsletter__description">
								Normaalgesproken had je je hier aan kunnen melden voor onze nieuwsbrief.<br>
								We zijn op dit moment bezig met het aanpassen van onze databasesoftware. <br>
								Het aanmelden voor onze nieuwsbrief is vanaf maandagochtend weer mogelijk.
							</p>
						{% endif %}
					</div>
			</div>
		</section>
	{% endif %}
{% endblock %}
