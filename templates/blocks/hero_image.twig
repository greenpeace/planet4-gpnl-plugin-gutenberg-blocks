{% block hero_image %}

	{% if ( fields ) %}

		<section class="hero {% if ( fields.small ) %}hero__small{% endif %}"
				 style="background-image: url('{{ fields.image_url }}');
					 background-position: {{ fields.focus_image | default }}; ">

			<div class="page-template hero__wrapper ">
				<div class="hero__text">
					{% if not fields.image_url | default %}
						<p>
							<em>
								Dit is het block "Hero afbeelding" en heeft nu nog geen afbeelding of tekst.<br>
								Selecteer dit blok om aanpassinging te maken.
							</em>
						</p>
						<p>
							<em>
								Als je dit blok niet wil gebruiken dan kun je het verwijderen.
							</em>
						</p>
					{% endif %}
					{% if ( fields.title ) %}
						<h2 class="hero__title">
					  <span>
						  {{ fields.title|e('wp_kses_post') | raw }}
					  </span>
						</h2>
					{% endif %}

					{% if ( fields.description ) %}
						<p class="hero__description">{{ fields.description|e('wp_kses_post') | raw }}</p>
					{% endif %}

					{% if (fields.link_text) %}
						<a href="{{ fields.link_url }}"
						   class="btn btn-small btn-medium btn-primary hero__button">{{ fields.link_text | raw }}</a>
					{% endif %}

				</div>
			</div>
		</section>

	{% endif %}
{% endblock %}
