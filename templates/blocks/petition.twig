{% block petition %}
	{% if ( fields ) %}
		<section class="block petition-block">
			<div class="row">
				<div class="col-lg-6 order-last order-lg-first petition-img">
					{% if fields.isloggedin and fields.ad_campaign != 'GP' %}
						<h3>Let op: Dit is een pagina met een externe advertentiecampagne!</h3>
						<table class="table table-dark">
							<tr>
								<td>Laatste edit door:</td>
								<td>{{ fields.lastedit }}</td>
							</tr>
							<tr>
								<td>Origineel aangemaakt door:</td>
								<td>{{ fields.author }}</td>
							</tr>
							<tr>
								<td>Advertentiebureau:</td>
								<td>{{ fields.ad_campaign }}</td>
							</tr>
						</table>
					{% endif %}
					{% if ( fields.image ) and ( fields.image == 0 ) %}
						<img
								class="img-fluid"
								src="{{ fields.image }}"
								srcset="{{ fields.image_srcset }}"
								sizes="{{ fields.image_sizes }}"
								alt="{{ fields.alt_text }}"
						>
					{% endif %}
				</div>
				<div class="col-lg-6 order-first order-lg-last gpnl-petition-wrapper">
					<div class="card-body">
						{% if ( fields.title ) %}
							<div class="petition-title">
								<h2 class="card-title">{{ fields.title }}</h2>
							</div>
						{% endif %}
						<div class="gpnl-petition">
							<p class="">
								Normaalgesproken had je hier je gegeven kunnen achterlaten.<br>
								We zijn op dit moment bezig met het aanpassen van onze databasesoftware. <br>
								Dit is vanaf maandagochtend weer mogelijk.
							</p>
						</div>
					</div>
					{# Used for hiding the petitionform, unless JS is enabled #}
					<script>jQuery('.gpnl-petition-form').removeClass('hidden-when-no-js-enabled');</script>
				</div>
			</div>
		</section>
	{% endif %}
{% endblock %}

