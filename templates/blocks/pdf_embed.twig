{% block pdf_embed %}
	{% if ( fields ) %}
		<h2 class="page-section-header">{{ fields.title | default }}</h2>
		<p class="page-section-description">{{ fields.description | default }}</p>
		<iframe style="width: 100%; height: 500px;" width="100%" height={{ fields.height }} allowfullscreen
				src="https://docs.google.com/viewer?embedded=true&url={{ fields.document_url }}" frameborder="0"></iframe>
	{% endif %}
{% endblock %}
